    ViewData["Title"] = "Home Page";
}

<div class="jumbotron-custom">
    <h1>Orange City University</h1>
</div>

<!--Home Image-->
<div class="home-image">
    <picture>
        <source media="(min-width: 991px)" srcset="img/OrangeUniverityCanvaStock.jpg" />
        <source media="(min-width: 767px)" srcset="img/OrangeUniverityCanvaStockMedium.jpg" />
        <source srcset="img/OrangeUniverityCanvaStockSmall.jpg" />
